{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build program",
            "type": "shell",
            "command": "mkdir -p build debug && cd build && cmake ../ && make && g++ -g ../src/*.cpp -o ../debug/a.out",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean build folder",
            "type": "shell",
            "command": "rm -rf build bin debug",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}